<div class="container mt-5">
  <div class="row">
    <div class="offset-sm-3 col-sm-6">
      <div class="card">
        <div class="card-block">
          <h2 class="text-center card-title mb-4"><%= t('devise.registrations.title') %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true,
                class: 'form-control', placeholder: t('users.email') %>
            </div>

            <div class="form-group">
              <%= f.text_field :name, class: 'form-control', placeholder: t('users.name') %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off",
                class: 'form-control', placeholder: t('users.password') %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off",
                class: 'form-control', placeholder: t('users.password_confirmation') %>
            </div>

            <div class="form-group row">
              <div class="col-sm-4">
                <%= f.submit t('devise.registrations.title'), class: 'pointer btn btn-primary form-control' %>
              </div>
              <div class="col-sm-8 form-check col-form-label text-right pt-0">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
