<div class="container mt-5">
  <div class="row">
    <div class="offset-sm-3 col-sm-6">
      <div class="card">
        <div class="card-block">
          <h2 class="text-center card-title mb-4"><%= t('devise.sessions.title') %></h2>

          <%= render 'shared/flash_messages' %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true,
                class: 'form-control', placeholder: t('users.email') %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off",
                class: 'form-control', placeholder: t('users.password') %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group row">
                <div class="col-sm-6">
                  <%= f.submit t('devise.sessions.title'), class: 'pointer btn btn-primary form-control' %>
                </div>
                <div class="col-sm-6 form-check col-form-label text-right">
                  <label class="form-check-label">
                    <%= f.check_box :remember_me, class: 'form-check-input' %>
                    <%= f.label :remember_me %>
                  </label>
                </div>
              </div>
            <% end -%>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
